{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "hosting/dist",
    "rewrites": [
      { "source": "/backup", "function": "backup" },
      { "source": "/json", "function": "json" },
      { "source": "/csv", "function": "csv" },
      { "source": "/pdf", "function": "pdf" }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "predeploy": [
      "npm --prefix \"$PROJECT_DIR/hosting\" install",
      "npm --prefix \"$PROJECT_DIR/hosting\" run build"
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
